generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id            String    @id @default(cuid())
  title         String
  content       String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  comments      Comment[]
  favoriteCount Int       @default(0)
  userId        String?
  user          User?     @relation("UserArticles", fields: [userId], references: [id])
  favoriteUser  User[]    @relation("UserFavoriteArticles")
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  articleId String?
  Article   Article? @relation(fields: [articleId], references: [id])
}

model Item {
  id            String   @id @default(cuid())
  name          String
  description   String
  price         Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  tags          String[]
  favoriteCount Int      @default(0)
  favoriteUser  User[]   @relation("UserFavoriteItems")
  userId        String?
  user          User?    @relation("UserItems", fields: [userId], references: [id])
}

model User {
  id                String    @id @default(cuid())
  nickname          String
  email             String
  image             String
  encryptedPassword String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  favoriteItem      Item[]    @relation("UserFavoriteItems")
  favoriteArticle   Article[] @relation("UserFavoriteArticles")
  Article           Article[] @relation("UserArticles")
  Item              Item[]    @relation("UserItems")
}
